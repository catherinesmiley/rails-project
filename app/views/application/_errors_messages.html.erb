<% if object.errors.any? %>
    <div id="field_with_errors">
        <h2>Please correct <%= pluralize(object.errors.count, "error") %></h2>

        <ul>
            <% object.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
        </ul>
    </div>
<% end %>