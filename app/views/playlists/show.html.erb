<h1><%= @playlist.name %></h1>
<h4><%= @playlist.description %></h4>
<h5><%= pluralize(@playlist.categories.count, 'Category:') %></h5>
<% @playlist.categories.each do |category| %>
    <%= category.name %>
<% end %>

<ul>
    <% @playlist.songs.each do |song| %>
        <li>
            Title: <%= link_to song.title, song_path(song) %><br>
            Artist: <%= song.artist %><br>
            Genre: <%= song.genre %><br><p>
        </li>
    <% end %>
</ul>

<h4><%= link_to "Add a song to this playlist!", new_playlist_song_path(@playlist) %></h4>
