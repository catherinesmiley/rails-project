<%= form_for song do |f| %>

    <%= f.label :title %>
    <%= f.text_field :title %><p>
    <%= f.label :artist %>
    <%= f.text_field :artist %><p>

    <%= f.fields_for :categories do |category| %>
        <%= hidden_field_tag "song[categories_attributes][0][playlist_id]", @playlist.id if @playlist %>
    <%= category.label :category %>
    <%= category.text_field :name %><p>
    <% end %>

    <%= f.submit %>
<% end %>