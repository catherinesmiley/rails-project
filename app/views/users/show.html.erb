<h1><%= @user.username %>'s Homepage</h1>

<% if @user.playlists.length >= 1 %>
    <h2>Your Playlists: </h2>
    <% @user.playlists.each do |playlist| %>
        <%= link_to playlist.name, playlist_path(playlist) %><br>
        <%= playlist.description %><p>
        <%= pluralize(playlist.songs.count, 'Songs') %><p>
    <% end %>
<% else %>
    <h3>You don't have any playlists yet!</h3>
<% end %>