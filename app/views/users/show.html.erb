<h1><%= @user.username %>'s Homepage</h1>

<h3><%= pluralize(@user.playlists.count, 'Playlist') %></h3>
<% @user.playlists.each do |playlist| %>
    <%= link_to playlist.name, playlist_path(playlist) %> - <%= pluralize(playlist.songs.count, 'Songs') %><p>
    <%= playlist.description %><p>
<% end %>

<h3><%= pluralize(@user.songs.count, 'Song') %></h3>
<% @user.songs.each do |song| %>
    <%= link_to song.title, song_path(song) %> by <%= song.artist %><br>
<% end %>
